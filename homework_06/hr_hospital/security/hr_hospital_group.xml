<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Категорія для прав доступу -->
        <record id="category_hr_hospital" model="ir.module.category">
            <field name="name">HR hospital</field>
            <field name="description">User access levels for the Healthcare system</field>
            <field name="sequence">1</field>
        </record>

        <!-- Група Пацієнт -->
        <record id="group_patient" model="res.groups">
            <field name="name">Patient</field>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="comment">Patients with limited access</field>
        </record>

        <!-- Група Інтерн, яка наслідує Лікаря -->
        <record id="group_intern" model="res.groups">
            <field name="name">Intern</field>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="implied_ids" eval="[(4, ref('group_doctor'))]"/>
            <field name="comment">Interns with access to their own records</field>
        </record>

        <!-- Група Лікар, яка наслідує Менеджера -->
        <record id="group_doctor" model="res.groups">
            <field name="name">Doctor</field>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="implied_ids" eval="[(4, ref('group_manager'))]"/>
            <field name="comment">Doctors with access to their own and interns' records</field>
        </record>

        <!-- Група Менеджер, яка наслідує Адміністратора -->
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="implied_ids" eval="[(4, ref('group_admin'))]"/>
            <field name="comment">Managers with full access to all visits</field>
        </record>

        <!-- Група Адміністратор -->
        <record id="group_admin" model="res.groups">
            <field name="name">Ad-ministrator</field>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="comment">Administrators with full rights</field>
        </record>

    </data>
</odoo>
